# Easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# List all files colorized in long format
alias ll="ls -lF ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -laF ${colorflag}"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# Grep options
alias grep="command grep --color=auto --exclude-dir={node_modules,.git,coverage,dist,.idea}"

# Ack options
alias ack="command ack --ignore-dir={node_modules,coverage,dist,build,.idea} --color-match=red --color-filename=yellow"

# git -> hub
alias git=hub

# conventional changelog
alias chglog="conventional-changelog -p angular && conventional-changelog -p angular -i CHANGELOG.md -s"
